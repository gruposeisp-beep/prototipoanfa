<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".FutureTablesDashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion de Proximas fechas"
        android:textSize="24sp"
        android:layout_marginBottom="48dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnGoToCreateFutureTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Tabla"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGoToAddFutureMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃ±adir Partido a Tabla"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGoToTables"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Ver Proximas fechas" />

    <Button
        android:id="@+id/btnGoToDeleteFutureTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorError"
        android:text="Eliminar Tabla" />

</LinearLayout>

