<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:context=".ValidateTicketActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validar Ticket"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnScanQr"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escanear C贸digo QR"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTicketCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar c贸digo manualmente"
        android:inputType="number"
        android:maxLength="6"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnValidateTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Validar por C贸digo Manual"/>

    <TextView
        android:id="@+id/tvValidationResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        tools:text="Esperando validaci贸n..."/>

</LinearLayout>

